@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Authentication
@model LoginViewModel
@inject SignInManager<AppUser> SignInManager

@{
    ViewData["Title"] = "Đăng nhập";
    Layout="_LoginLayout.cshtml";
}
<style>
    .bg-login-image{
        background-image: url(https://prakashinfotech.com/wp-content/uploads/2022/11/net-framework.jpg);
        background-position: center;
        background-repeat: no-repeat;
        @* background-size: contain; *@
        @* background-color: black; *@
    }
</style>
 <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Đăng nhập!</h1>
                                    </div>
                                    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post"  class="user">
                                        <div class="form-group">
                                            @* <label asp-for="UserNameOrEmail" class="control-label"></label> *@
                                            <input asp-for="UserNameOrEmail" class="form-control form-control-user"/>
                                            <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            @* <label asp-for="Password" class="control-label"></label> *@
                                            <input asp-for="Password" class="form-control form-control-user" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input asp-for="RememberMe" class="custom-control-input">
                                                <label class="custom-control-label" asp-for="RememberMe"> @Html.DisplayNameFor(m => m.RememberMe)</label>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-user btn-block">Đăng nhập</button>
                                        <hr>
                                        @{
                                            var schemes = await SignInManager.GetExternalAuthenticationSchemesAsync();
                                            var loginProviders = schemes.ToList();
                                            if (loginProviders.Count == 0)
                                            {
                                                @* <div>
                                                    <p>
                                                        Ứng dụng chưa hỗ trợ đăng nhập từ tài khoản ngoài
                                                    </p>
                                                </div> *@
                                            }
                                            else
                                            {
                                                <form asp-controller="Account" asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                    <div>
                                                        <p>
                                                            @foreach (var provider in loginProviders)
                                                            {
                                                                var cssClas="btn btn-user btn-block";
                                                                var icon="";
                                                                if (provider.Name=="Google")
                                                                {
                                                                    cssClas="btn btn-google btn-user btn-block";
                                                                    icon="<i class=\"fab fa-google fa-fw\"></i>";
                                                                }
                                                                else if (provider.Name=="Facebook")
                                                                {
                                                                    cssClas="btn btn-facebook btn-user btn-block";
                                                                    icon="<i class=\"fab fa-facebook-f fa-fw\"></i>";
                                                                }
                                                                <button type="submit" class="@cssClas" 
                                                                        name="provider" value="@provider.Name" 
                                                                        title="Log in using your @provider.Name account">@Html.Raw(icon) @provider.Name
                                                                </button>
                                                            }
                                                        </p>
                                                    </div>
                                                </form>
                                            }
                                        }
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" asp-action="ForgotPassword">Quyên mật khẩu?</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Chưa có tài khoản? Đăng ký</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
