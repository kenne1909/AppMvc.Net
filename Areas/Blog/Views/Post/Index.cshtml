@model IEnumerable<App.Models.Blog.Post>

@{
    ViewData["Title"] = "Danh sách Blog";
    var currentPage = ViewBag.CurrentPage ?? 1; 
    var totalPages = ViewBag.TotalPages ?? 1; 
    var searchTerm = ViewBag.SearchTerm as string;
    int counter =1;
}
<style>
    .pagination {
        @* display: flex; *@
        justify-content: center;
        @* align-items: center; *@
        @* position: fixed; *@
        @* bottom: 20px; *@
        @* left: 50%;*@
        @* transform: translateX(-50%); *@
    }

    .pagination a {
        @* display: inline-block; *@
        padding: 8px 16px;
        text-decoration: none;
        color: black;
        background-color: #f1f1f1;
        border: 1px solid #ddd;
        border-radius: 5px;
        margin: 0 4px; 
    }

    .pagination a:hover {
        background-color: #98E0FF;
    }
    .pagination a.active {
    background-color: #98E0FF;
    color: white;
}
</style>


<h1>@ViewData["Title"]</h1>

<partial name="_AlertMessage" />

<p>
    <a asp-action="Create">Tạo bài viết mới</a>
</p>
<p>Tổng số bài viết: @ViewBag.totalItems</p>
<table class="table">
    <thead>
        <tr>
            <th>
                STT
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Published)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateUpdated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@((currentPage - 1) * ViewBag.PageSize + counter)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PostId">@Html.DisplayFor(modelItem => item.Title)</a> 
                <br>
                <small>
                    @string.Join(",",item.PostCategories!.Select(pc =>pc.Category!.Title));
                </small>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Published)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author!.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateUpdated)
            </td>
            <td>
        
                <a asp-action="Details" asp-route-id="@item.PostId">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.PostId">Xóa</a>
            </td>
        </tr>
        counter++;
    }
    </tbody>
</table>
<div class="pagination">
    @if (currentPage > 1)
    {
        <a asp-area="Blog" asp-controller="Post" asp-action="Index" asp-route-page="@(currentPage - 1)" >&lt;</a>
    }

    @for (int i = 1; i <= totalPages; i++)
    {
        if (i == currentPage)
        {
            <a asp-area="Blog" asp-controller="Post" asp-action="Index" asp-route-page="@i" class="active">@i</a>
        }
        else
        {
            <a asp-area="Blog" asp-controller="Post" asp-action="Index" asp-route-page="@i">@i</a>
        }
    }

    @if (currentPage < totalPages)
    {
        <a asp-area="Blog" asp-controller="Post" asp-action="Index" asp-route-page="@(currentPage + 1)" >&gt;</a>
    }
</div>




